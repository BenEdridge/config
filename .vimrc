" This must be first, because it changes other options as side effect
set nocompatible

set number
syntax on
set tabstop=4
set shiftwidth=4	
set softtabstop=4
set expandtab
set showcmd
set cursorline
set wildmenu
set showmatch
set incsearch
set history=1000         " remember more commands and search history
set undolevels=1000      " use many muchos levels of undo
set autoindent
set copyindent
